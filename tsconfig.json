{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@theme/*": [
        "theme/*"
      ],
      "@core": [
        "../core/src"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ESNext.Array"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "typings/**/*.d.ts",
  ],
}